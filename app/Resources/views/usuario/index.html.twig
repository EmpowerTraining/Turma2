{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de Usuários</h1>

    <div class="table-responsive">
    <table class="table  table-bordered table-striped">
        <thead>
            <tr>
                <th>Matrícula</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Cadastrado em:</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.email }}</td>
                <td>{% if usuario.criacao %}{{ usuario.criacao|date('d/m/Y à\\s H:i:s') }}{% endif %}</td>
                <td>
                    <a  class="btn btn-success" href="{{ path('usuario_show', { 'id': usuario.id }) }}"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" data-placement="top" title="Exibir" aria-hidden="true"></span></a>
                    <a class="btn btn-info" href="{{ path('usuario_edit', { 'id': usuario.id }) }}"><span class="glyphicon glyphicon-pencil"  aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a class="btn btn-primary" href="{{ path('usuario_new') }}">Cadastrar Novo</a>

{% endblock %}
