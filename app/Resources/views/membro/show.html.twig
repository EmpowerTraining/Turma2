{% extends 'base.html.twig' %}

{% block body %}
    <h1>Membro</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membro.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ membro.nome }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ membro.email }}</td>
            </tr>
            <tr>
                <th>Datanascimento</th>
                <td>{% if membro.dataNascimento %}{{ membro.dataNascimento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ membro.sexo }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ membro.telefone }}</td>
            </tr>
            <tr>
                <th>Dataregistro</th>
                <td>{% if membro.dataRegistro %}{{ membro.dataRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('membro_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('membro_edit', { 'id': membro.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
